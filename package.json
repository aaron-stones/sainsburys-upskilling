{
  "name": "node-express-typescript",
  "version": "1.0.0",
  "main": "server.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start:prod": "node dist/server.js",
    "test": "jest --coverage",
    "test:unit": "ENV_FILE=./config/.env.test jest",
    "start:dev": "nodemon ./server.ts",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format": "prettier --ignore-path .eslintignore --write \"**/*.+(js|ts|json)\"",
    "pre-commit:lint": "prettier --ignore-path .eslintignore --check .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.310.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.58.0",
    "aws-sdk": "^2.1356.0",
    "dotenv": "^16.0.3",
    "dynamodb-admin": "^4.5.0",
    "dynamoose": "^3.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.8.0",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "husky-init": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "*",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "nodemon": "^2.0.22"
  }
}
